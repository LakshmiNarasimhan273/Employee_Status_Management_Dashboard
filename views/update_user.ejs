<!-- header include -->
<%- include('include/_header')%>
<!-- /header include -->

<!-- Main Section -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fa-solid fa-circle-arrow-left"></i>All Candidates</a>
      </div>
    </div>

    <div class="form-title text-center">
      <h2 class="text-dark">Update Candidate Account</h2>
      <span class="text-light">Use the Form for Update Your Candidate Account</span>
    </div>
    <!-- add user Form ejs Syntax -->
    <!-- Form Section -->
    <form method="POST" id="update_user">
        <div class="new_user">
          <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>" />
            <input
              type="text"
              name="name"
              value="<%= user.name %>"
              placeholder="Enter your Name"
            />
          </div>
  
          <!-- Email -->
  
          <div class="form-group">
            <label for="email" class="text-light">E-mail</label>
            <input
              type="text"
              name="email"
              value="<%= user.email%>"
              placeholder="Enter your E-mail"
            />
          </div>
  
          <!-- Gender -->
  
          <div class="form-group">
            <label for="gender" class="text-light">Gender :- </label>
  
            <!-- Male -->
            <div class="radio inline">
              <input type="radio" id="radio-1" name="gender" value="Male" <%= user.gender =='Male'? 'checked': ''%> />
              <label for="radio-1" class="radio-label">Male</label>
            </div>
  
            <!-- Female -->
            <div class="radio inline">
              <input type="radio" id="radio-2" name="gender" value="Female" <%= user.gender =='Female'? 'checked': ''%>/>
              <label for="radio-2" class="radio-label">Female</label>
            </div>
          </div>
  
          <!-- Status -->
          <div class="form-group">
            <label for="gender" class="text-light">Status :- </label>
  
            <!-- Active -->
            <div class="radio inline">
              <input type="radio" id="radio-3" name="status" value="active" <%= user.status =='active'? 'checked': ''%> />
              <label for="radio-3" class="radio-label">active</label>
            </div>
  
            <!-- In-Active -->
            <div class="radio inline">
              <input type="radio" id="radio-4" name="status" value="in-active" <%= user.status =='in-active'? 'checked': ''%> />
              <label for="radio-4" class="radio-label">in-active</label>
            </div>
          </div>
  
          <div class="form-group">
            <button type="submit" class="btn text-dark update">
              Save Details
            </button>
          </div>
        </div>
      </form>
    </div>
    <!-- /Form Section -->
    </div>
</main>
<!--/ Main Section -->

<!-- footer include -->
<%- include('include/_footer')%>
<!-- /footer include -->

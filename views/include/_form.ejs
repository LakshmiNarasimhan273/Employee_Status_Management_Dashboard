    <!-- Form Section -->
    <form action="/api/users" method="POST" id="add_user">
        <div class="new_user">
          <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="" />
            <input
              type="text"
              name="name"
              value=""
              placeholder="Enter your Name"
            />
          </div>
  
          <!-- Email -->
  
          <div class="form-group">
            <label for="email" class="text-light">E-mail</label>
            <input
              type="text"
              name="email"
              value=""
              placeholder="Enter your E-mail"
            />
          </div>
  
          <!-- Gender -->
  
          <div class="form-group">
            <label for="gender" class="text-light">Gender :- </label>
  
            <!-- Male -->
            <div class="radio inline">
              <input type="radio" id="radio-1" name="gender" value="Male" />
              <label for="radio-1" class="radio-label">Male</label>
            </div>
  
            <!-- Female -->
            <div class="radio inline">
              <input type="radio" id="radio-2" name="gender" value="Female" />
              <label for="radio-2" class="radio-label">Female</label>
            </div>
          </div>
  
          <!-- Status -->
          <div class="form-group">
            <label for="gender" class="text-light">Status :- </label>
  
            <!-- Active -->
            <div class="radio inline">
              <input type="radio" id="radio-3" name="status" value="active" />
              <label for="radio-3" class="radio-label">Active</label>
            </div>
  
            <!-- In-Active -->
            <div class="radio inline">
              <input type="radio" id="radio-4" name="status" value="in-active" />
              <label for="radio-4" class="radio-label">In-Active</label>
            </div>
          </div>
  
          <div class="form-group">
            <button type="submit" class="btn text-dark update">
              Save Details
            </button>
          </div>
        </div>
      </form>
    </div>
    <!-- /Form Section -->
  